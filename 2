    <div class="widget-container">
        <iframe id="chatFrame" src="https://botrix.live/widgets/chat/?bid=uwsxHb9ZbfM4FzePKECpnQ&bots=false&emojis=true&hideCommands=false&hideMessages=false&hideMessagesSeconds=10&fontSize=23&kick=true&platformIcon=false&theme=bubbles"></iframe>
    </div>
    <script>
        const iframe = document.getElementById('chatFrame');
        iframe.onload = () => {
            const observer = new MutationObserver(() => {
                iframe.contentWindow.scrollTo(0, iframe.contentDocument.body.scrollHeight);
            });

            observer.observe(iframe.contentDocument.body, { childList: true, subtree: true });
        };
    </script>
